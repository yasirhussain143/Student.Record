<h1 class="text-center mt-4"> Teacher's Blog </h1>

<div class="container">
  <% @teachers.each do |teacher| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to teacher.name, teacher %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(teacher, size: 200), teacher %>
            </h5>
            <p class="card-text"><%= pluralize(teacher.students.count, "student") %></p>
            <%= link_to "View profile", teacher, class: "btn btn-outline-success" %>
            <%= link_to "Edit profile", edit_teacher_path(teacher), class: "btn btn-outline-info" %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(teacher.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>