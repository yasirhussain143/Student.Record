 

           <div class = "container">

        <%= render "shared/errors" , obj: @teacher %>
            <div class="row justify-content-center">
              <div class="col-5">

            <%= form_with(model: @teacher, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false },local: true) do |f| %>
          
           <div class="form-group row">
           <%= f.label :name, class: "col-2 col-form-label text-light" %>
           <div class="col-5">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the name" %>
            <%= render 'shared/errors', obj: @teacher, field: :name %>
             
              
          </div>
        </div>

       

        <div class="form-group">
          <%= f.label :email , class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :email,  class: "form-control shadow rounded", placeholder: "Enter the email" %>
            <%= render 'shared/errors', obj: @teacher, field: :email %>
             
          </div>
       




               <div class="field mt-4" >
                <%= f.label :profile_picture %>
                <%= f.file_field :profile_picture %>
                 <%= render 'shared/errors', obj: @teacher, field: :profile_picture %>
              </div>

            
        

      
        

         <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light  mt-2 btn-sm" %>
        </div>
                <div>
          <%= link_to 'Back', teachers_path  ,class:"btn btn-outline-light  text-black"  %>
        </div>
              </div>
      <% end %> 
    </div>
    <div class="form-group row justify-content-center col-2 text-light">
    
  </div>
</div>

