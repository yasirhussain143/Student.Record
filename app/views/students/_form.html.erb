 

           <div class = "container">

              <%=render "shared/errors", obj: @student %>
       <div class="row justify-content-center">
        <div class="col-5">
            <%= form_with(model: @student, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
           <div class="form-group row">
           <%= f.label :student_id, class: "col-2 col-form-label text-light" %>
           <div class="col-5">
            <%= f.text_field :student_id, class: "form-control shadow rounded", placeholder: "Id of student" %>
          </div>
        </div>

       

        <div class="form-group">
          <%= f.label :student_name, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :student_name, rows: 1, class: "form-control shadow rounded", placeholder: "name of student" %>
          </div>
        </div>
        

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          
            <%= f.text_field :email, rows: 1, class: "form-control shadow rounded", placeholder: "Enter the email" %>
          </div>
        

         <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light  mt-2 btn-sm" %>
        </div>
        </div>
      <% end %> 
    </div>
    <div class="form-group row justify-content-center col-2 text-light">
      
    <%= link_to 'Back', students_path  ,class:"btn btn-outline-light  text-info"  %>
  </div>
  </div>
</div>

